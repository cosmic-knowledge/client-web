{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"common/**/*.vue",
		"common/schemaV2.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
