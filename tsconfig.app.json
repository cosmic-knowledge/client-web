{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"common/**/*.vue",
		"common/**/*.ts",
		".hidden/test.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"lib": ["ES2022", "DOM"],
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@src/*": ["../server-deno/src/*"],
			"@common/*": ["./common/*"],
			"~zod": ["./node_modules/zod"],
			"~trpc-server": ["./node_modules/@trpc/server"],
			"~trpc-server/*": ["./node_modules/@trpc/server/*"]
		}
	}
}
